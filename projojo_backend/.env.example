# ============================================================================
# TypeDB Connection Settings
# ============================================================================
# Configure your TypeDB database connection
TYPEDB_DB_NAME=projojo_db
TYPEDB_SERVER_ADDR=127.0.0.1:1729
TYPEDB_EDITION=Core
TYPEDB_USERNAME=admin
TYPEDB_PASSWORD=password

# Uncomment to reset the database on every startup (WARNING: deletes all data!)
# RESET_DB=yes

# ============================================================================
# OAuth Provider Credentials
# ============================================================================
# For detailed setup instructions, see: auth/README.md

# Google OAuth
GOOGLE_CLIENT_ID=CLIENT_ID_FROM_GOOGLE_CONSOLE
GOOGLE_CLIENT_SECRET=CLIENT_SECRET_FROM_GOOGLE_CONSOLE

# GitHub OAuth
GITHUB_CLIENT_ID=CLIENT_ID_FROM_GITHUB_DEVELOPER_SETTINGS
GITHUB_CLIENT_SECRET=CLIENT_SECRET_FROM_GITHUB_DEVELOPER_SETTINGS

# Microsoft OAuth
MICROSOFT_CLIENT_ID=CLIENT_ID_FROM_AZURE_PORTAL
MICROSOFT_CLIENT_SECRET=CLIENT_SECRET_FROM_AZURE_PORTAL

# SURF OAuth
SURF_CLIENT_ID=CLIENT_ID_FROM_SURF_DASHBOARD
SURF_CLIENT_SECRET=CLIENT_SECRET_FROM_SURF_DASHBOARD

# ============================================================================
# Security & Session Management
# ============================================================================
# Secret key for OAuth session management during login flows
SESSIONS_SECRET_KEY=STRING_FOR_OAUTH_LOGIN_SESSIONS

# Secret key for JWT token signing and verification
JWT_SECRET_KEY=STRING_FOR_JWT_SIGNING

# Frontend URL for OAuth redirects (default: http://localhost:5173)
FRONTEND_URL=http://localhost:5173

# Environment setting (development/production)
ENVIRONMENT=development

# TIP: Generate random secret keys using:
# python -c "import secrets; print('SECRET: ' + secrets.token_urlsafe(32))"